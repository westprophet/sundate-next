{
  "compilerOptions": {
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "components/*": [
        "src/components/*"
      ],
      "assets/*": [
        "src/assets/*"
      ]
    },
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "esnext"
    ],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "custom.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.js"
  ],
  "ignorePatterns": [
    "next.config.js"
  ]
}
